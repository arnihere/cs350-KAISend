<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/title_holdauction"
            android:text="Add request"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="25dp"
            android:background="@drawable/text_view"
            />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/menu_foreground"
            android:layout_marginLeft="5dp"
            android:layout_alignLeft="@id/title_holdauction"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/claim_foreground"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignRight="@id/title_holdauction"
            />
    </RelativeLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="* Please choose one of type:"
    android:textColor="#000000"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="23dp">
</TextView>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:id="@+id/auction_type"
        android:contextClickable="true"
        android:spinnerMode="dialog"
        android:layout_marginTop="5dp"
        android:background="@drawable/type_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        tools:clickable="true">
    </Spinner>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/auction_Name"
        android:hint="  Name"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:lines="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/auction_From"
        android:hint="  From : (e.g.N1)"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:lines="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/auction_To"
        android:hint="  To : (e.g.W1)"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:lines="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/auction_Deadline"
        android:hint="  Deadline"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:lines="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/auction_Detail"
        android:hint="  Detail"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:lines="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/auction_Deliveryfee"
        android:hint="  Delivery Fee(e.g KRW 2000)"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:paddingLeft="8dp"
        android:lines="1"/>
    <EditText

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/auction_Price"
        android:hint="  Price(e.g. KRW 2000)"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:paddingLeft="8dp"
        android:lines="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:text="* If the item need to pay, please enter the item price"
        android:textColor="#000000" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_submit"
            android:layout_weight="1"
            android:text="Submit"
            android:textSize="19dp"
            android:background="@drawable/button_view"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button_cancel"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="19dp"
            android:background="@drawable/button_view"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>