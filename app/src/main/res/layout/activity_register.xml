<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/title_registration"
        android:text="Registration"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="25dp"
        android:background="@drawable/text_view"
        />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/menu_foreground"
            android:layout_marginLeft="5dp"
            android:layout_alignLeft="@id/title_registration"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/claim_foreground"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignRight="@id/title_registration"
            />
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_email"
        android:hint="  Please enter KAIST Email"
        android:layout_marginTop="50dp"
        android:background="@drawable/edit_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:lines="1"
        android:paddingLeft="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_username"
        android:hint="  User Name"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:lines="1"
        android:paddingLeft="8dp"/>
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/signup_kakaoid"
    android:hint="  Kaoka Talk ID"
    android:layout_marginTop="10dp"
    android:background="@drawable/edit_view"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:inputType="text"
    android:lines="1" android:paddingLeft="8dp"/>
    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/signup_phonenumber"
    android:hint="  Phone Number"
    android:layout_marginTop="10dp"
    android:background="@drawable/edit_view"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:inputType="phone"
    android:lines="1" android:paddingLeft="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_password1"
        android:hint="  Password"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"
        android:lines="1" android:paddingLeft="8dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_password2"
        android:hint="  Retype password"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"
        android:lines="1" android:paddingLeft="8dp"/>



    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/note"
    android:text="*Kaist Email will be your ID"
    android:textColor="#000000"
    android:layout_gravity="right"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="19dp"
            android:id="@+id/button_cancel"
            android:background="@drawable/button_view"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/signup_button"
            android:text="Confirm"
            android:textSize="19dp"
            android:background="@drawable/button_view"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>