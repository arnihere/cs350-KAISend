            android:text="Payment Cost:"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_gravity="center">
        </TextView>
        <TextView
            android:id="@+id/paymentCost"
            android:text="123"
            android:textColor="#000000"
            android:textSize="18dp"
