<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="You are requester"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="35dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Sender Contact"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/senderName"
        android:textColor="#000000"
        android:textSize="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/senderEmail"
        android:textColor="#000000"
        android:textSize="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/senderPhoneNumber"
        android:textColor="#000000"
        android:textSize="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/senderKakaoID"
        android:textColor="#000000"
        android:textSize="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Item Information"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/iname"
        android:textColor="#000000"
        android:textSize="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/itype"
        android:textColor="#000000"
        android:textSize="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/iprice"
        android:textColor="#000000"
        android:textSize="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/iDest"
        android:textColor="#000000"
        android:textSize="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/fDest"
        android:textColor="#000000"
        android:textSize="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/deadLine"
        android:textColor="#000000"
        android:textSize="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Conformation State"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/paymentCon"
        android:textColor="#000000"
        android:textSize="10dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/deliveryCon"
        android:textColor="#000000"
        android:textSize="10dp"
        ></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        >

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Delivery Confirm"
        android:textSize="15dp"
        android:clickable="true"
        android:onClick="deliveryConfirm"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_view" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Back"
            android:textSize="15dp"
            android:clickable="true"
            android:onClick="backToMain2Activity"
            android:layout_marginLeft="200dp"
            android:background="@drawable/button_view" />

    </RelativeLayout>
</LinearLayout>
    </ScrollView>